template.tpl--city-input
  .modal
    .modal__head
      .modal__title
        span 
      button.modal__close(modal-close)
        +svgIcon('close')
    .modal__body
      .h1._dsk Location
      .city-form(data-suggestion="api/city-suggestions.json")
        .city-form__input
          .ui-input
            input(type="text" name="city" placeholder="Найти Location")
            .ui-input__clear
              div(icon-tgl-crt)
                <svg width="32" height="33" viewBox="0 0 32 33" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <rect x="2.66406" y="1.83334" width="22.6667" height="22.6667" rx="11.3333" stroke="#AFA9BA" stroke-width="1.5"/>
                  <path d="M21.3303 21.8333L30.6635 31.1547" stroke="#AFA9BA" stroke-width="1.5" stroke-linecap="round"/>
                </svg>
                <svg width="32" height="33" viewBox="0 0 32 33" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <circle cx="16" cy="16.5" r="16" fill="#AFA9BA"/>
                  <path d="M9.33594 23.1667L22.6693 9.83334M9.33594 9.83334L22.6693 23.1667" stroke="white" stroke-width="1.5" stroke-linecap="round"/>
                </svg>
              //- img(src="img/svg/input-clear.svg")
        ul.city-form__sugg-crt
          li
        .city-form__defaults
          p.h6 You can select more than 150,000 settlements throughout the Russian Federation.
          ul
            - var value
            +cloneArr(defaultSugg)
              li=value
template.tpl--address-input 
  .modal
    .modal__head
      .modal__title
        span 
      button.modal__close(modal-close)
        +svgIcon('close')
    .modal__body
      .h1._dsk Delivery address
      form.address-form(data-suggestion="api/address-suggestions.json")
        .h6.address-form__city(change-city)
          span 
          .hl Change
        .address-form__crt
          .address-form__field-wrap
            .ui-input.ui-input_label
              input(type=inputType name="street" required )
              label.ui-input__float-label
                | Street*
            label.chbox.chbox_inline
              input(type='checkbox' name="no-street")
              .chbox__box
              span.h6 No street
          +uiInput('house', 'text')
            | House*
          .ui-input.ui-input_label
            input(type=inputType name="apart")
            label.ui-input__float-label
              | Apartment
        .address-form__bottom 
          button.button(type="submit") add address

